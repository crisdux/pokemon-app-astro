---
import SecondLayout from "@layouts/SecondLayout.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Liter&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <nav class="nav-container">
            <div class="nav-container__inner">
                <a class="home-link" href="/">Ink</a>
                <ul class="top-nav">
                    <li><a href="/features">Features</a></li>
                    <li><a href="/pricing">Pricing</a></li>
                    <li><a href="/support">Support</a></li>
                    <li class="top-nav__featured">
                        <a href="/login">Login</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="hero">
            <div class="hero__inner">
                <h2 class="text-balance uppercase">
                    Team collaboration done right
                </h2>
                <a href="#" class="button button--cta">Get started</a>
            </div>
        </div>

        <div class="container">
            <div class="tile-row">
                <div class="tile">
                    <h4>Work together, even if you're apart</h4>
                    <p>
                        Organize your team conversations into threads.
                        Collaborate together on documents in real-time. Use
                        face-to-face <a href="/features/video-calling"
                            >video calls</a
                        > when typing just won't do.
                    </p>
                    <a href="/collaboration" class="button">Read more</a>
                </div>
                <div class="tile">
                    <h4>Take it with you</h4>
                    <p>
                        Ink is available on a wide array of devices, so you can
                        work from anywhere:
                    </p>
                    <ul class="tag-list">
                        <li>Web</li>
                        <li>iOS</li>
                        <li>Android</li>
                        <li>Windows Phone</li>
                    </ul>
                    <a href="/supported-devices" class="button">Read more</a>
                </div>
                <div class="tile">
                    <h4>Priced right</h4>
                    <p>
                        Whether you work on a team of three or a three hundred,
                        you'll find our tiered pricing reasonable at every
                        level.
                    </p>
                    <a href="/pricing" class="button">Read more</a>
                </div>
            </div>
        </div>

        <footer class="page-footer">
            <div class="page-footer__inner">
                Copyright &copy; 2017 Ink, Inc.
            </div>
        </footer>
    </body>
</html>

<style>
    :root {
        --brand-green: #076478;
        --drak-green: #099268;
        --medium-green: #20c997;
        --text-color: #212529;
        --gray: #868e96;
        --light-gray: #f1f3f5;
        --extra-light-gray: #f8f9fa;
        --white: #fff;
        --red: hsl(342, 63%, 46%);

        box-sizing: border-box;
        color: var(--text-color);

        --hero-image: "https://www.curotec.com/wp-content/uploads/2022/04/developers-2.jpg?w=1024";
    }

    *,
    ::after,
    ::before {
        box-sizing: inherit;
    }

    body {
        margin: 0;
        font-family: "Liter", sans-serif;
        line-height: 1.5;
        background-color: var(--extra-light-gray);
        letter-spacing: 0.01em;
    }

    h1,
    h2,
    h3,
    h4 {
        font-family: "Dancing Script", serif;
        letter-spacing: 0.02em;
        text-wrap: balance;
    }
    h1 {
        font-size: 3rem;
    }

    a {
        color: var(--medium-green);
    }

    a:visited {
        color: var(--brand-green);
    }

    a:hover {
        color: var(--brand-green);
    }

    a:active {
        color: var(--red);
    }

    /* -- navbar -- */

    .nav-container {
        background-color: var(--medium-green);
    }

    .nav-container__inner {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        min-width: 1080px;
        margin: 0 auto;
        padding: 0.625em 0;
    }

    .home-link {
        color: var(--text-color);
        font-size: 1.6rem;
        font-family: "Dancing Script", serif;
        font-weight: bold;
        text-decoration: none;
    }

    .top-nav {
        display: flex;
        list-style-type: none;
        margin: 0;
    }

    .top-nav > li + li {
        margin-left: 0.625em;
    }

    .top-nav a {
        displa: block;
        font-size: 0.8rem;
        padding: 0.3rem 1.25rem;
        color: var(--white);
        background-color: var(--brand-green);
        text-decoration: none;
        border-radius: 3px;
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .top-nav a:hover {
        background-color: var(--drak-green);
    }

    .top-nav__featured > a {
        color: var(--brand-green);
        background-color: var(--white);
    }

    .top-nav__featured > a:hover {
        color: var(--medium-green);
        background-color: var(--white);
    }

    /*--- hero ---*/

    .hero {
        background-image: url("https://www.pureoffices.co.uk/wp-content/uploads/2019/05/Pure-Offices-Reading_full-size_001-scaled.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        margin-bottom: 2.5rem;
    }

    .hero__inner {
        max-width: 1080px;
        margin: 0 auto;
        padding: 5.5625em 12.5em 12.5em 0;
        text-align: right;
    }

    .hero h2 {
        font-size: 1.95rem;
        margin-top: 0;
        margin-bottom: 0.625rem;
    }

    .button {
        display: inline-block;
        padding: 0.4em 1em;
        color: var(--brand-green);
        border: 2px solid var(--brand-green);
        border-radius: 0.2em;
        text-decoration: none;
        font-size: 1rem;
        font-size: 0.8rem;
    }

    .button:hover {
        background-color: var(--drak-green);
        color: var(--white);
    }

    .button--cta {
        padding: 0.6em 1em;
        background-color: var(--medium-green);
        color: var(--white);
        border: none;
    }

    /* main */

    .container {
        margin: 0 auto;
        max-width: 1080px;
    }
    .tile-row {
        display: flex;
    }
    .tile-row > * {
        flex: 1;
    }
    .tile {
        background-color: var(--white);
        border-radius: 0.3em;
        padding: 1.5625em;
    }

    .tile > h4 {
        margin-bottom: 1.5em;
    }

    .tile-row > * + * {
        margin-left: 1.5625em;
    }

    p {
        margin-top: 1.5em;
        margin-bottom: 1.5em;
        text-wrap: pretty;
    }

    .page-footer {
        margin-top: 0.3em;
        padding: 1em 0;
        background-color: var(--light-gray);
        color: var(--gray);
    }

    .page-footer__inner {
        margin: 0 auto;
        max-width: 1080px;
        text-align: center;
        font-size: 0.8rem;
    }

    .tag-list {
        list-style: none;
        padding-left: 0;
    }
    .tag-list > li {
        display: inline;
        padding: 0.3rem 0.5rem;
        font-size: 0.8rem;
        border-radius: 0.2rem;
        background-color: var(--light-gray);
        line-height: 2.6;
    }
</style>
