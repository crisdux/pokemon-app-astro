---
// import { ClientRouter } from 'astro:transitions';
import { siteInfo } from 'src/const/site-info';

interface Props {
    title?:string;
    image?:string;
    description?:string;
}


const {title = siteInfo.title, description = siteInfo.description, image} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- meta seo  -->
    <meta name="description" content={description}>
    <meta name="author" content={"Fernando Herrera"} >

    <!-- og metadatos  -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={image}>

    <!-- <ClientRouter /> -->
    <style>
        @view-transition {
            navigation:auto;
        }
    </style>

    <title>{title}</title>
</head>
<body class="bg-slate-800 text-slate-100 m-auto max-w-3xl">
    <main class="mt-10">
        <slot />
    </main>
</body>
</html>