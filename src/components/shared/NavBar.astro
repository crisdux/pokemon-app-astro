---
const links = [
    { href: "/", text: "Listado" },
    { href: "/pokemones/1", text: "Listado Paginado" },
    { href: "/favorites", text: "Favoritos" },
    { href: "/test-nav", text: "nav" },
];

const currentPath = Astro.url.pathname;
---

<!-- component -->
<nav>
    <div
        class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
    >
        {
            links.map((link) => {
                return (
                    <div>
                        <a
                            href={link.href}
                            class="text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6"
                        >
                            {link.text}
                        </a>
                        {currentPath === link.href ? (
                            <div
                                transition:name="menu-line"
                                class="border-b-2 border-blue-500 mx-4"
                            />
                        ):(
                            <div class="border-b-2 border-transparent"></div>
                        )}
                    </div>
                );
            })
        }
    </div>
</nav>
